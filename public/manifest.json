{
  "name": "YouTube Music Remote",
  "version": "1.0",
  "browser_action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "https://www.youtube.com",
    "https://www.youtube.com/*"
  ],
  "background": {
    "scripts": ["hot-reload.js", "ytBackgroundScript.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "run_at": "document_end",
      "js": ["contentScript.js"]
    }
  ],
  "manifest_version": 2
}
